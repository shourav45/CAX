
@{
    ViewBag.Title = "DayReport";
}

<div class="row" ng-controller="DayilyRptCtrl">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add SPO
            </div>
            <div class="panel-body">
                <div class="row">
                    <form name="userform" ng-submit="ViewReport()" method="post" novalidate>
                        <div class="col-lg-6">
                            <div class="" ng-class="{ 'has-error' : submitted && userform.Name.$invalid}">
                                <label class="col-md-4 control-label">
                                    Date :
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="SPO.Name" class="form-control" placeholder="Name" id="Name" name="Name" required>
                                    <div class="form-control-focus"> </div>
                                    <span ng-show="submitted &&  userform.Name.$error.required" class="text-danger">Name is Required</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary" style="width:16%;margin-left: 9px;" ng-click="submitted=true" value="View Report" />
                            <input type="reset" id="frmresetbtn" class="btn btn-warning" style="float:left;width: 16%;margin-left: 28%;" ng-click="submitted=false" value="Reset" />
                        </div>

                    </form>
                    <a href="/Report/GetDailyReport"  target="_blank">View Report</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        CNApp.controller('DayilyRptCtrl', function ($scope, $http, DTOptionsBuilder, DTColumnBuilder) {
            
            $scope.ViewReport = function () {
                $http.get("/Report/GetDailyReport")
                    .then(function successCallback(response) {
                        console.log('rpt clicked!');
                    }, function errorCallback(response) {
                        //error msg
                    });
            }
        });

    </script>
}