@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<link href="~/assets/css/bootstrap-select.min.css" rel="stylesheet" />
<script src="~/assets/scripts/bootstrap-select.min.js"></script>

<div class="row" ng-app="UserApp" ng-controller="UserClt">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Rate Menu
            </div>
            <div class="panel-body">
                <div class="row">
                    <form name="caxform" ng-submit="submitForm()" method="post" novalidate>
                        <input type="text" style="display:none" ng-model="IsEdit" readonly />
                        <div class="col-lg-6">
                            <div class="" ng-class="{ 'has-error' : submitted && caxform.District.$invalid}">
                                <label class="col-md-4 control-label">
                                    Select Party :
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <div class="row-fluid">
                                        <select class="selectpicker" name="UserName" ng-model="PartyName" data-show-subtext="false" data-live-search="true" style="z-index: 01;width: 100%;" required>
                                            <option value="" data-subtext="">Select Party</option>
                                            <option ng-repeat="pt in PartyList" value="{{pt.PartyInfoId}}">{{pt.Name}}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="" ng-class="{ 'has-error' : submitted && caxform.Area.$invalid}">
                                <label class="col-md-4 control-label">
                                    Area:
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="Destination.Area" class="form-control" placeholder="Area" id="Area" name="Area" required>
                                    <div class="form-control-focus"> </div>
                                    <span ng-show="submitted &&  caxform.Area.$error.required" class="text-danger">Email is Required</span>
                                </div>
                            </div>
                            &emsp;
                        </div>

                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary" style="width:16%;margin-left: 9px;" ng-click="submitted=true" value="Add" />
                            <input type="reset" id="frmresetbtn" class="btn btn-warning" style="float:left;width: 16%;margin-left: 28%;" ng-click="submitted=false" value="Reset" />
                        </div>
                        <br />
                        <hr />
                    </form>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" datatable="ng" dt-options="vm.dtOptions">
                                        <thead>
                                            <tr>
                                                <th>SL/No</th>
                                                <th>Party</th>
                                                <th>Rate Type</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="rate in RateList">
                                                <td>{{$index + 1}}</td>
                                                <td>{{rate.PartyInfoId}}</td>
                                                <td>{{rate.RateType}}</td>

                                                <td>
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-default btn" ng-click="Edit(rate);"><i class="glyphicon glyphicon-pencil"></i></button>
                                                        <button type="button" class="btn btn-default btn" ng-click="Delete(rate);"><i class="glyphicon glyphicon-trash"></i></button>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                        <!--End Advanced Tables -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<!-- Page-Level Plugin Scripts-->
<script src="~/assets/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/assets/plugins/dataTables/dataTables.bootstrap.js"></script>
<script>
        angular.module('UserApp', ['UserApp.controllers', 'datatables']);
        angular.module('UserApp.controllers', []).controller('UserClt', function ($scope, $http, DTOptionsBuilder, DTColumnBuilder) {
            init();
            function init() {
                initialize();
                LoadPartyList();
                LoadRate();
            }
            function initialize() {
                $scope.vm = {};
                $scope.vm.dtOptions = DTOptionsBuilder.newOptions()
                  .withOption('order', [0, 'asc']);
                $scope.IsEdit = 0;
            }

            $scope.Edit = function (dest) {
                console.log(dest);
                $scope.IsEdit = 1;
                console.log($scope.Destination);

                $scope.Destination = dest;
                $('html').animate({ scrollTop: 0 }, 'slow');//IE, FF
                $('body').animate({ scrollTop: 0 }, 'slow');//chrome, don't know if Safari works
                $('.popupPeriod').fadeIn(1000, function () {
                    setTimeout(function () { $('.popupPeriod').fadeOut(2000); }, 3000);
                });
                //$(window).scrollTop(0);
            }

            $scope.Delete = function (dest) {
                console.log(dest);
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this user!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#DD6B55',
                    confirmButtonText: 'Ok',
                    cancelButtonText: "Cancel",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                    function (isConfirm) {
                        if (isConfirm) {
                            $http.delete("/api/Destinations/" + dest.DestinationId)
                        .then(function successCallback(response) {
                            $("#frmresetbtn").trigger("click");
                            LoadDestinationList();
                            sweetAlert("Success!!", "Destination deleted", "success");
                        }, function errorCallback(response) {
                            //error msg
                        });
                        }
                    });
            }
            

            function LoadRate() {
                $http.get("/api/RateInfoes")
                       .then(function successCallback(response) {
                           $scope.RateList = response.data;
                           toastr.options.positionClass = 'toast-bottom-right';
                           toastr.success($scope.RateList.length + ' rate found.');
                       }, function errorCallback(response) {
                           //error msg
                       });
            }

            function LoadPartyList() {
                $http.get("/api/PartyInfoes")
                       .then(function successCallback(response) {
                           $scope.PartyList = response.data;
                           toastr.options.positionClass = 'toast-bottom-right';
                           toastr.success($scope.PartyList.length + ' Party found.');
                       }, function errorCallback(response) {
                           //error msg
                       });
            }

            $scope.submitForm = function () {
                if ($scope.caxform.$invalid)
                    return;

                if ($scope.IsEdit == 1) //for update user
                {
                    console.log($scope.Destination);
                    $http.put("/api/Destinations/" + $scope.Destination.DestinationId, $scope.Destination)
                            .then(function successCallback(response) {
                                $scope.dest = [];
                                $("#frmresetbtn").trigger("click");
                                LoadDestinationList();
                                $scope.IsEdit = 0;
                                sweetAlert("Done!!", "Updated successfully", "success");
                            }, function errorCallback(response) {
                                //error msg
                       });

                }
                else //for new user
                {
                        console.log($scope.Destination);
                    $http.post("/api/Destinations", $scope.Destination)
                            .then(function successCallback(response) {
                                $scope.Destination = [];
                                $("#frmresetbtn").trigger("click");
                                LoadDestinationList();
                                sweetAlert("Congratulations!!", "Destination added successfully", "success");
                            }, function errorCallback(response) {
                                //error msg
                            });
                }


            }
        });

</script>
}