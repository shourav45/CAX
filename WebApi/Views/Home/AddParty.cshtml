
@{
    ViewBag.Title = "AddParty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/bootstrap-select.min.css" rel="stylesheet" />
<link href="~/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<div class="row" style="background-color:dimgrey;height:800px;margin-top: 8%;">
    <div name="caxform" style="height: 100%;width: 94%;background-color: white;margin-top: 2%;margin-left: 3%;">
        <div class="row" ng-controller="PartyCtrl">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Add Party
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <form name="userform" ng-submit="submitForm()" method="post" novalidate>
                                <input type="text" style="display:none" ng-model="IsEdit" readonly />
                                <div class="col-lg-6">
                                    <div class="" ng-class="{ 'has-error' : submitted && userform.Name.$invalid}">
                                        <label class="col-md-4 control-label">
                                            Name :
                                            <span style="color:red">*</span>
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" ng-model="Party.Name" class="form-control" placeholder="Name" id="Name" name="Name" required>
                                            <div class="form-control-focus"> </div>
                                            <span ng-show="submitted &&  userform.Name.$error.required" class="text-danger">Name is Required</span>
                                        </div>
                                    </div>
                                    &emsp;
                                    <div class="" ng-class="{ 'has-error' : submitted && userform.Mobile.$invalid}">
                                        <label class="col-md-4 control-label">
                                            Mobile Number:
                                            <span style="color:red">*</span>
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" ng-model="Party.Mobile" class="form-control" placeholder="Mobile Number 1" id="Mobile" name="Mobile" required>
                                            <div class="form-control-focus"> </div>
                                            <span ng-show="submitted &&  userform.Mobile.$error.required" class="text-danger">Mobile Number is Required</span>
                                        </div>
                                    </div>
                                    &emsp;
                                    <div class="" ng-class="{ 'has-error' : submitted && userform.Telephone.$invalid}">
                                        <label class="col-md-4 control-label">
                                            Telephone:
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" ng-model="Party.Telephone" class="form-control" placeholder="Telephone" id="Telephone" name="Telephone">
                                        </div>
                                    </div>
                                    &emsp;
                                </div>
                                <div class="col-lg-6">
                                    <div class="" ng-class="{ 'has-error' : submitted && userform.Email.$invalid}">
                                        <label class="col-md-4 control-label">
                                            Email:
                                        </label>
                                        <div class="col-md-8">
                                            <input type="text" ng-model="Party.Email" class="form-control" placeholder="Email" id="Email" name="Email">
                                        </div>
                                    </div>
                                    &emsp;
                                    <div class="" ng-class="{ 'has-error' : submitted && userform.Address.$invalid}">
                                        <label class="col-md-4 control-label">
                                            SPO Name:
                                        </label>
                                        <div class="col-md-8 row-fluid">
                                            <select class="form-control" ng-options="spo.SPOInfoId as spo.Name for spo in listSPO" ng-model="Party.SPOId" id="SPOId" name="SPOId" required>
                                                <option value="" selected>Select</option>
                                            </select>
                                            <div class="form-control-focus"> </div>
                                            <span ng-show="submitted &&  userform.SPOId.$error.required" class="text-danger">Please Select a SPO</span>
                                        </div>
                                    </div>
                                    <hr />
                                    <hr />
                                </div>

                                <div class="col-md-12">
                                    <input type="submit" class="btn btn-primary" style="width:16%;margin-left: 9px;" ng-click="submitted=true" value="Add Party" />
                                    <input type="reset" id="frmresetbtn" class="btn btn-warning" style="float:left;width: 16%;margin-left: 28%;" ng-click="submitted=false" value="Reset" />
                                </div>

                            </form>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <!-- Advanced Tables -->
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover" datatable="ng" dt-options="vm.dtOptions">
                                                <thead>
                                                    <tr>
                                                        <th>SL/No</th>
                                                        <th>Name</th>
                                                        <th>Mobile</th>
                                                        <th>Email</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="prt in partyList">
                                                        <td>{{$index + 1}}</td>
                                                        <td>{{prt.Name}}</td>
                                                        <td>{{prt.Mobile}}</td>
                                                        <td>{{prt.Email}}</td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <button type="button" class="btn btn-default btn" ng-click="EditParty(prt);"><i class="glyphicon glyphicon-pencil"></i></button>
                                                                <button type="button" class="btn btn-default btn" ng-click="DeleteParty(prt);"><i class="glyphicon glyphicon-trash"></i></button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                                <!--End Advanced Tables -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <!-- Page-Level Plugin Scripts-->
    <script src="~/assets/scripts/bootstrap-select.min.js"></script>
    <script src="~/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/assets/plugins/dataTables/dataTables.bootstrap.js"></script>

    <script>
        CNApp.controller('PartyCtrl', function ($scope, $http, DTOptionsBuilder, DTColumnBuilder) {
            init();
            function init() {
                initialize();
                LoadPartyList();
                getAllSPO();
            }
            function initialize() {
                $scope.vm = {};
                $scope.vm.dtOptions = DTOptionsBuilder.newOptions()
                    .withOption('order', [0, 'asc']);
                $scope.IsEdit = 0;
            }

            $scope.EditParty = function (prt) {
                console.log('clicked');
                $scope.Party = [];
                getAllSPO();
                console.log(prt);
                $scope.IsEdit = 1;
                $scope.Party = prt;
                debugger;
                $scope.Party.SPOId = prt.SPOId.value;
                $('html').animate({ scrollTop: 0 }, 'slow');//IE, FF
                $('body').animate({ scrollTop: 0 }, 'slow');//chrome, don't know if Safari works
                $('.popupPeriod').fadeIn(1000, function () {
                    setTimeout(function () { $('.popupPeriod').fadeOut(2000); }, 3000);
                });
            }

            $scope.DeleteParty = function (prt) {
                console.log(prt);
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this Party!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#DD6B55',
                    confirmButtonText: 'Ok',
                    cancelButtonText: "Cancel",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                    function (isConfirm) {
                        if (isConfirm) {
                            $http.delete("/api/PartyInfoes/" + prt.PartyInfoId)
                                .then(function successCallback(response) {
                                    $("#frmresetbtn").trigger("click");
                                    LoadPartyList();
                                    sweetAlert("Success!!", "Party deleted", "success");
                                }, function errorCallback(response) {
                                    //error msg
                                });
                        }
                    });
            }

            function LoadPartyList() {
                $http.get("/api/PartyInfoes")
                    .then(function successCallback(response) {
                        $scope.partyList = response.data;
                        toastr.options.positionClass = 'toast-bottom-right';
                        toastr.success($scope.partyList.length + ' Party found.');
                        console.log(response.data);
                    }, function errorCallback(response) {
                        //error msg
                    });
            }

            $scope.submitForm = function () {
                if ($scope.userform.$invalid)
                    return;

                if ($scope.IsEdit == 1) //for update user
                {
                    if ($scope.Party != 0) {
                        $http.put("/api/PartyInfoes/" + $scope.Party.PartyInfoId, $scope.Party)
                            .then(function successCallback(response) {
                                $scope.Party = [];
                                $("#frmresetbtn").trigger("click");
                                LoadPartyList();
                                getAllSPO();
                                $scope.IsEdit = 0;
                                sweetAlert("Done!!", "User updated successfully", "success");
                            }, function errorCallback(response) {
                                //error msg
                            });
                    }
                }
                else //for new user
                {
                    if ($scope.Party != 0) {
                        console.log($scope.Party);
                        $http.post("/api/PartyInfoes", $scope.Party)
                            .then(function successCallback(response) {
                                $scope.Party = [];
                                $("#frmresetbtn").trigger("click");
                                LoadPartyList();
                                sweetAlert("Congratulations!!", "A Party has been added successfully", "success");
                            }, function errorCallback(response) {
                                //error msg
                            });
                    }
                }
            }

            function getAllSPO() {
                $http.get("/api/SPOInfoes")
                    .then(function successCallback(response) {
                        $scope.listSPO = response.data;
                        console.log('spo block');
                        console.log($scope.listSPO);
                    }, function errorCallback(response) {
                        //error msg
                    });
            }
        });

    </script>
}