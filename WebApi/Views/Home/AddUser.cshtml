
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />

<div class="row" ng-app="UserApp" ng-controller="UserClt">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add User
            </div>
            <div class="panel-body">
                <div class="row">
                    <form name="userform" ng-submit="submitForm()"  method="post" novalidate>
                        <input type="text" style="display:none" ng-model="IsEdit" readonly/>
                        <div class="col-lg-6">
                            <div class="" ng-class="{ 'has-error' : submitted && userform.Name.$invalid}">
                                <label class="col-md-4 control-label">
                                    Name :
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="User.Name" class="form-control" placeholder="Name" id="Name" name="Name" required>
                                    <div class="form-control-focus"> </div>
                                    <span ng-show="submitted &&  userform.Name.$error.required" class="text-danger">Name is Required</span>
                                </div>
                             </div>
                            &emsp;
                            <div class="" ng-class="{ 'has-error' : submitted && userform.Mobile1.$invalid}">
                                <label class="col-md-4 control-label">
                                    Mobile Number 1:
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="User.Mobile1" class="form-control" placeholder="Mobile Number 1" id="Mobile1" name="Mobile1" required>
                                    <div class="form-control-focus"> </div>
                                    <span ng-show="submitted &&  userform.Mobile1.$error.required" class="text-danger">Mobile Number is Required</span>
                                </div>
                            </div>
                            &emsp;
                            <div class="" ng-class="{ 'has-error' : submitted && userform.Designation.$invalid}">
                                <label class="col-md-4 control-label">
                                    Designation:
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="User.Designation" class="form-control" placeholder="Designation" id="Designation" name="Designation" required>
                                    <div class="form-control-focus"> </div>
                                    <span ng-show="submitted &&  userform.Designation.$error.required" class="text-danger">Designation is Required</span>
                                </div>
                            </div>
                            &emsp;
                            <div class="" ng-class="{ 'has-error' : submitted && userform.UserPassword.$invalid}">
                                <label class="col-md-4 control-label">
                                    Password:
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="User.UserPassword" class="form-control" placeholder="Password" id="UserPassword" name="UserPassword" required>
                                    <div class="form-control-focus"> </div>
                                    <span ng-show="submitted &&  userform.UserPassword.$error.required" class="text-danger">Password is Required</span>
                                </div>
                            </div>
                            &emsp;
                        </div>
                        <div class="col-lg-6">
                            <div class="" ng-class="{ 'has-error' : submitted && userform.Email.$invalid}">
                                <label class="col-md-4 control-label">
                                    Email:
                                    <span style="color:red">*</span>
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="User.Email" class="form-control" placeholder="Email" id="Email" name="Email" required>
                                    <div class="form-control-focus"> </div>
                                    <span ng-show="submitted &&  userform.Email.$error.required" class="text-danger">Email is Required</span>
                                </div>
                            </div>
                            &emsp;
                            <div class="" ng-class="{ 'has-error' : submitted && userform.Mobile2.$invalid}">
                                <label class="col-md-4 control-label">
                                    Mobile Number 2:
                                </label>
                                <div class="col-md-8">
                                    <input type="text" ng-model="User.Mobile2" class="form-control" placeholder="Mobile Number 2" id="Mobile2" name="Mobile2">
                                </div>
                            </div>
                            <hr />
                            <hr />
                            <p style="color:red" id="permissionerr"></p>
                            <div class="col-lg-6">
                                <span style="color:red">*</span><label>User Access Permissions:</label>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="UserMenu" value="UserMenu">User Menu
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="AccountsMenu" value="AccountsMenu">Accounts Menu
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="BookingMenu" value="BookingMenu">Booking Menu
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="DeliveryMenu" value="DeliveryMenu">Delivery Menu
                                    </label>
                                </div>
                               
                            </div>
                            <div class="col-lg-6">
                                <div class="checkbox">
                                    <label>
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="PartyMenu" value="PartyMenu">Party Menu
                                    </label>
                                </div>

                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="CNPrintMenu" value="CNPrintMenu">CN Print Menu
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="Reports" value="Reports">Reports
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="Zonal" value="Zonal">Zonal
                                    </label>
                                </div>
                            </div>

                        </div>

                            <div class="col-md-12">
                                <input type="submit" class="btn btn-primary" style="width:16%;margin-left: 9px;" ng-click="submitted=true" value="Add User" />
                                <input type="reset" id="frmresetbtn"  class="btn btn-warning" style="float:left;width: 16%;margin-left: 28%;" ng-click="submitted=false" value="Reset" />
                            </div>

                       </form>
                       </div>

                <div class="row">
                    <div class="col-lg-12">
                        <!-- Advanced Tables -->
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover" datatable="ng" dt-options="vm.dtOptions">
                                        <thead>
                                            <tr>
                                            <th>SL/No</th>
                                            <th>Name</th>
                                            <th>Designation</th>
                                            <th>Mobile</th>
                                             <th>Email</th>
                                              <th>Acctions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="user in userList">
                                                <td>{{$index + 1}}</td>
                                                <td>{{user.Name}}</td>
                                                <td>{{user.Designation}}</td>
                                                <td>{{user.Mobile1}}</td>
                                                <td>{{user.Email}}</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <button type="button" class="btn btn-default btn" ng-click="EditUser(user);"><i class="glyphicon glyphicon-pencil"></i></button>
                                                        <button type="button" class="btn btn-default btn" ng-click="DeleteUser(user);"><i class="glyphicon glyphicon-trash"></i></button>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                        <!--End Advanced Tables -->
                    </div>
                </div>
                    </div>
                </div>
            </div>
    </div>

@section Scripts{
     <!-- Page-Level Plugin Scripts-->
<script src="~/assets/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/assets/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script>
        angular.module('UserApp', ['UserApp.controllers', 'datatables']);
        angular.module('UserApp.controllers', []).controller('UserClt', function ($scope, $http, DTOptionsBuilder, DTColumnBuilder) {
            init();
            function init() {
                initialize();
                LoaduserList();
            }
            function initialize() {
                $scope.vm = {};
                $scope.vm.dtOptions = DTOptionsBuilder.newOptions()
                  .withOption('order', [0, 'asc']);
                $scope.IsEdit = 0;
            }

            $scope.EditUser = function (user) {
                $scope.IsEdit = 1;
                $scope.User = user;
                var rolearray = user.UserRole.split(/,/);
                //for multiple click clear first previous
                document.getElementById('Zonal').checked = false;
                document.getElementById('Reports').checked = false;
                document.getElementById('CNPrintMenu').checked = false;
                document.getElementById('PartyMenu').checked = false;
                document.getElementById('UserMenu').checked = false;
                document.getElementById('AccountsMenu').checked = false;
                document.getElementById('BookingMenu').checked = false;
                document.getElementById('DeliveryMenu').checked = false;

                angular.forEach(rolearray, function (role) {
                    document.getElementById(role).checked = true;
                });

                $('html').animate({ scrollTop: 0 }, 'slow');//IE, FF
                $('body').animate({ scrollTop: 0 }, 'slow');//chrome, don't know if Safari works
                $('.popupPeriod').fadeIn(1000, function () {
                    setTimeout(function () { $('.popupPeriod').fadeOut(2000); }, 3000);
                });
                //$(window).scrollTop(0);
            }

            $scope.DeleteUser = function (user) {
                console.log(user);
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this user!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#DD6B55',
                    confirmButtonText: 'Ok',
                    cancelButtonText: "Cancel",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                    function (isConfirm) {
                        if (isConfirm) {
                            $http.delete("/api/UserInfoes/" + user.UserInfoId)
                        .then(function successCallback(response) {
                            $("#frmresetbtn").trigger("click");
                            document.getElementById('permissionerr').style.display = 'none';
                            LoaduserList();
                            sweetAlert("Success!!", "User deleted", "success");
                        }, function errorCallback(response) {
                            //error msg
                        });
                        }
                    });
            }

            function LoaduserList() {
                $http.get("/api/UserInfoes")
                       .then(function successCallback(response) {
                           $scope.userList = response.data;
                           toastr.options.positionClass = 'toast-bottom-right';
                           toastr.success($scope.userList.length + ' users found.');
                       }, function errorCallback(response) {
                           //error msg
                       });
            }

            $scope.submitForm = function () {
                if ($scope.userform.$invalid)
                    return;

                if ($scope.IsEdit == 1) //for update user
                {
                    var pcount = 0;
                    var pstring = '';
                    if (document.getElementById('Zonal').checked == true) {
                        pcount = pcount + 1;
                        pstring = pstring + 'Zonal';
                    }
                    if (document.getElementById('Reports').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',Reports';
                        }
                        else {
                            pstring = pstring + 'Reports';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('CNPrintMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',CNPrintMenu';
                        }
                        else {
                            pstring = pstring + 'CNPrintMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('PartyMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',PartyMenu';
                        }
                        else {
                            pstring = pstring + 'PartyMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('UserMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',UserMenu';
                        }
                        else {
                            pstring = pstring + 'UserMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('AccountsMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',AccountsMenu';
                        }
                        else {
                            pstring = pstring + 'AccountsMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('BookingMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',BookingMenu';
                        }
                        else {
                            pstring = pstring + 'BookingMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('DeliveryMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',DeliveryMenu';
                        }
                        else {
                            pstring = pstring + 'DeliveryMenu';
                        }
                        pcount = pcount + 1;
                    }

                    if (pcount != 0) {
                        $scope.User.UserRole = pstring;
                        $http.put("/api/UserInfoes/" + $scope.User.UserInfoId, $scope.User)
                            .then(function successCallback(response) {
                                $scope.User = [];
                                $("#frmresetbtn").trigger("click");
                                document.getElementById('permissionerr').style.display = 'none';
                                LoaduserList();
                                $scope.IsEdit = 0;
                                sweetAlert("Done!!", "User updated successfully", "success");
                            }, function errorCallback(response) {
                                //error msg
                            });
                    }
                    else {
                        document.getElementById('permissionerr').innerHTML = 'Please check user permission.';
                    }
                }
                else //for new user
                {
                    var pcount = 0;
                    var pstring = '';
                    if (document.getElementById('Zonal').checked == true) {
                        pcount = pcount + 1;
                        pstring = pstring + 'Zonal';
                    }
                    if (document.getElementById('Reports').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',Reports';
                        }
                        else {
                            pstring = pstring + 'Reports';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('CNPrintMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',CNPrintMenu';
                        }
                        else {
                            pstring = pstring + 'CNPrintMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('PartyMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',PartyMenu';
                        }
                        else {
                            pstring = pstring + 'PartyMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('UserMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',UserMenu';
                        }
                        else {
                            pstring = pstring + 'UserMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('AccountsMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',AccountsMenu';
                        }
                        else {
                            pstring = pstring + 'AccountsMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('BookingMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',BookingMenu';
                        }
                        else {
                            pstring = pstring + 'BookingMenu';
                        }
                        pcount = pcount + 1;
                    }
                    if (document.getElementById('DeliveryMenu').checked == true) {
                        if (pcount != 0) {
                            pstring = pstring + ',DeliveryMenu';
                        }
                        else {
                            pstring = pstring + 'DeliveryMenu';
                        }
                        pcount = pcount + 1;
                    }

                    if (pcount != 0) {
                        $scope.User.UserRole = pstring;
                        console.log($scope.User);
                        $http.post("/api/UserInfoes", $scope.User)
                            .then(function successCallback(response) {
                                $scope.User = [];
                                $("#frmresetbtn").trigger("click");
                                document.getElementById('permissionerr').style.display = 'none';
                                LoaduserList();
                                sweetAlert("Congratulations!!", "A user has been added successfully", "success");
                            }, function errorCallback(response) {
                                //error msg
                            });
                    }
                    else {
                        document.getElementById('permissionerr').innerHTML = 'Please check user permission.';
                    }
                }


            }
        });

    </script>
}