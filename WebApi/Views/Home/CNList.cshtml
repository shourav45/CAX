
@{
    ViewBag.Title = "CNList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/bootstrap-select.min.css" rel="stylesheet" />
<link href="~/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
<div class="row" style="background-color:dimgrey;height:800px;margin-top: 8%;">
    <div name="caxform" style="height: 100%;width: 94%;background-color: white;margin-top: 2%;margin-left: 3%;">
        <div class="row" ng-controller="FrmlClt">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Rate Menu
                    </div>
                    <div class="panel-body">
                      
                        <div class="row">
                            <div class="col-lg-12">
                                <!-- Advanced Tables -->
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover" datatable="ng" dt-options="vm.dtOptions">
                                                <thead>
                                                    <tr>
                                                        <th>SL/No</th>
                                                        <th>CN Number</th>
                                                        <th>CN Type</th>
                                                        <th>CN Date</th>
                                                        <th>Service Type</th>
                                                        <th>Party</th>
                                                        <th>Destination</th>
                                                        <th>Total Amount</th>
                                                        <th>Actions</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr ng-repeat="cn in CnInfoList">
                                                        <td>{{$index + 1}}</td>
                                                        <td>{{cn.CNInfoId}}</td>
                                                        <td>{{cn.CNType}}</td>
                                                        <td>{{cn.CNDate.replace('/Date(','').replace(')/','') |  date:"dd/MM/yyyy"}}</td>
                                                        <td>{{cn.ServiceType}}</td>
                                                        <td>{{cn.PartyId}}</td>
                                                        <td>{{cn.Destination}}</td>
                                                        <td>{{cn.TotalAmount}}</td>

                                                        <td>
                                                            <div class="btn-group">
                                                                <button type="button" class="btn btn-default btn" ng-click="Edit(cn);"><i class="glyphicon glyphicon-pencil"></i></button>
                                                                <button type="button" class="btn btn-default btn" ng-click="Delete(cn);"><i class="glyphicon glyphicon-trash"></i></button>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                                <!--End Advanced Tables -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
        CNApp.controller('FrmlClt', function ($scope, $http, DTOptionsBuilder, DTColumnBuilder) {
            init();
            function init() {
                initialize();
                LoadCnInfo();
            }

            function initialize() {
                $scope.vm = {};
                $scope.vm.dtOptions = DTOptionsBuilder.newOptions()
                  .withOption('order', [0, 'asc']);
            }
        
            function LoadCnInfo() {
                $http.get("/CNInfoes/GetCNInfoset")
                       .then(function successCallback(response) {
                           $scope.CnInfoList = response.data;
                           toastr.options.positionClass = 'toast-bottom-right';
                           toastr.success($scope.CnInfoList.length + ' CN found.');
                       }, function errorCallback(response) {
                           //error msg
                       });
            }
            $scope.Edit = function (dest) {
                console.log(dest);
                $scope.IsEdit = 1;
                console.log($scope.Destination);

                $scope.Destination = dest;
                $('html').animate({ scrollTop: 0 }, 'slow');//IE, FF
                $('body').animate({ scrollTop: 0 }, 'slow');//chrome, don't know if Safari works
                $('.popupPeriod').fadeIn(1000, function () {
                    setTimeout(function () { $('.popupPeriod').fadeOut(2000); }, 3000);
                });
                //$(window).scrollTop(0);
            }
            $scope.Delete = function (dest) {
                console.log(dest);
                swal({
                    title: "Are you sure?",
                    text: "You will not be able to recover this user!",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#DD6B55',
                    confirmButtonText: 'Ok',
                    cancelButtonText: "Cancel",
                    closeOnConfirm: true,
                    closeOnCancel: true
                },
                    function (isConfirm) {
                        if (isConfirm) {
                            $http.delete("/api/Destinations/" + dest.DestinationId)
                        .then(function successCallback(response) {
                            $("#frmresetbtn").trigger("click");
                            LoadDestinationList();
                            sweetAlert("Success!!", "Destination deleted", "success");
                        }, function errorCallback(response) {
                            //error msg
                        });
                        }
                    });
            }
        });
</script>